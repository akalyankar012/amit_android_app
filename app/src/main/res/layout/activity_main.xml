<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Amit's Flags App"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="#2196F3"
        android:padding="8dp"
        android:gravity="center" />

    <!-- Horizontal LinearLayout for Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Button # 1 -->
        <Button
            android:id="@+id/buttonUSA"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/usa_icon"
            android:text="USA" />

        <!-- Button # 2 -->
        <Button
            android:id="@+id/buttonTX"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/tx_icon"
            android:text="TEXAS" />

        <!-- Button # 3-->
        <Button
            android:id="@+id/buttonUNT"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/unt_icon"
            android:text="UNT" />
    </LinearLayout>

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Tap on above images to view flags."
        android:textSize="12sp"
        android:padding="8dp"
        android:gravity="center" />

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/darker_gray" />

    <!-- ImageView to Display Image -->
    <ImageView
        android:id="@+id/displayImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:contentDescription="Displayed Image"
        android:src="@drawable/gray_icon" />



</LinearLayout>
